<script>
    document.addEventListener("DOMContentLoaded", function() {
        const typewriterText = document.getElementById("typewriter-text");
        const roles = ["Business Analyst", "Product Manager", "Management Consultant", "AI Engineer", "Full Stack Developer"];
        let currentPhraseIndex = 0;
        let charIndex = 0;
        let isDeleting = false;

        function type() {
            if (charIndex < roles[currentPhraseIndex].length) {
                typewriterText.textContent += roles[currentPhraseIndex][charIndex];
                charIndex++;
                setTimeout(type, 70);
            } else {
                isDeleting = true;
                setTimeout(deleteText, 1300);
            }
        }

        function deleteText() {
            if (charIndex > 0) {
                typewriterText.textContent = roles[currentPhraseIndex].substring(0, charIndex - 1);
                charIndex--;
                setTimeout(deleteText, 50);
            } else {
                isDeleting = false;
                currentPhraseIndex = (currentPhraseIndex + 1) % roles.length;
                setTimeout(type, 500);
            }
        }

        type();
    });
</script>